<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Back"
    android:contentDescription="@string/Background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mountmain"
        android:layout_width="460dp"
        android:layout_height="548dp"
        android:layout_marginBottom="-50dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/mountmain" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="126dp"
        android:layout_height="190dp"
        android:background="@color/Back"
        android:contentDescription="@string/Background"
        android:onClick="goToChooseLang"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166"
        app:srcCompat="@drawable/play" />

    <ImageView
        android:id="@+id/woman"
        android:layout_width="110dp"
        android:layout_height="107dp"
        android:layout_marginBottom="104dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/woman" />

    <ImageButton
        android:id="@+id/descrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/descrip"
        android:onClick="goToDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vocabulary"
        app:layout_constraintVertical_bias="0.228"
        app:srcCompat="@drawable/descrip" />

    <ImageButton
        android:id="@+id/vocabulary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vocabulary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play"
        app:layout_constraintVertical_bias="0.064"
        app:srcCompat="@drawable/vocabulary" />

</androidx.constraintlayout.widget.ConstraintLayout>